                            subcategory.transactionsValue = 0;
                        }
                        if (subcategory.monthlyPlannedBudget == null)
                        {
                            subcategory.monthlyPlannedBudget = 0;
                        }

                        <div class="budget-card @(isFirstItem ? "first" : "")">
