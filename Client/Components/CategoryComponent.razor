                    @foreach (SubCategoryToShow subcategory in subCategories)
                    {
                        if (givingSubCat != null && subcategory.id == givingSubCat.id)
                        {
                            subcategory.monthlyPlannedBudget = givingSubCat.monthlyPlannedBudget;
                        }
